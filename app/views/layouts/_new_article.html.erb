  <div class="card card-warning col-6">
  <div class="card-header">
    <h3 class="card-title">Create Article</h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= form_for @article, remote: true, :html => { :id => "new-article-form"}  do |f| %>
      <div class="row">
        <div class="col-12">
          <!-- text input -->
          <div class="form-group">
            <label>Text</label>
            <%= f.text_field :title, :class => "form-control", :placeholder => "Enter ..."%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <!-- textarea -->
          <div class="form-group">
            <label>Textarea</label>
            <%= f.text_area :description, :class => "form-control", :placeholder => "Enter ..."%>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= f.submit "Add", :class => "btn btn-primary ", id: "new-article-btn-submit" %>
        <button type="submit" class="btn btn-default float-right">Cancel</button>
      </div>
    <% end %>
  </div>
  <!-- /.card-body -->
</div>